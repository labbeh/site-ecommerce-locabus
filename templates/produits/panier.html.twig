{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
    <link rel="stylesheet" href="css/panier.css">
{% endblock %}

{% block title %}
    Panier
{% endblock %}

{% block dessous %}
    <div class="container">
        <table id="cart" class="table table-hover table-condensed">
            <thead>
            <tr>
                <th style="width:50%">Produit</th>
                <th style="width:10%">Prix</th>
                <!--<th style="width:8%">Quantité</th>-->
                <th style="width:22%" class="text-center">Sous-total</th>
                <th style="width:10%"></th>
            </tr>
            </thead>
            <tbody>
            {% for pdt in listePdts %}
                <tr>

                    <td data-th="Product">
                        <div class="row">
                            <div class="col-sm-2 hidden-xs"><img src="http://placehold.it/100x100" alt="..." class="img-responsive"/></div>
                            <div class="col-sm-10">
                                <h4 class="nomargin">{{ pdt.critair }} {{ pdt.modele }} {{ pdt.norme }}</h4>
                                <p>{{ pdt.description }}</p>
                            </div>
                        </div>
                    </td>
                    <td data-th="Price">$1.99</td>
                    <!--<td data-th="Quantity">
                        <input type="number" class="form-control text-center" value="1">
                    </td>-->
                    <td data-th="Subtotal" class="text-center">0</td>
                    <td class="actions" data-th="">
                        <button class="btn btn-info btn-sm"><i class="fa fa-refresh"></i></button>
                        <button class="btn btn-danger btn-sm"><i class="fa fa-trash-o"></i></button>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
            <tfoot>
            <!--<tr class="visible-xs">
                <td class="text-center"><strong>Total 1.99</strong></td>
            </tr>-->
            <tr>
                <td><a href="produits" class="btn btn-warning"><i class="fa fa-angle-left"></i>Retourner à la navigation</a></td>
                <td colspan="2" class="hidden-xs"></td>
                <td class="hidden-xs text-center"><strong>Total 0€</strong></td>
                <td><a href="#" class="btn btn-success btn-block">Etape suivante<i class="fa fa-angle-right"></i></a></td>
            </tr>
            </tfoot>
        </table>
    </div>
{% endblock %}