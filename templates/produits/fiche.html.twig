{% extends 'base.html.twig' %}
{%  block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="css/fiche.css">
{%  endblock %}

{% block title %}
    Fiche véhicule:
    {{ vehicule["marque"] }}
    {{ vehicule["modele"] }}
    {{ vehicule["norme"] }}
{% endblock %}

{% block dessous %}

    <div class="container">

        <div class="card">
            <div class="container-fliud">
                <div class="wrapper row">
                    <div class="preview col-md-6">
                        <a href="produits"> Retour à la sélection </a>
                        <div class="preview-pic tab-content">
                            <div class="tab-pane active" id="pic-1"><img src="./images/produits/{{ vehicule["marque"] }}_{{ vehicule["modele"] }}.jpg" /></div>
                            <!--<div class="tab-pane" id="pic-2"><img src="http://placekitten.com/400/252" /></div>
                            <div class="tab-pane" id="pic-3"><img src="http://placekitten.com/400/252" /></div>
                            <div class="tab-pane" id="pic-4"><img src="http://placekitten.com/400/252" /></div>
                            <div class="tab-pane" id="pic-5"><img src="http://placekitten.com/400/252" /></div>-->
                        </div>
                        <!-- Ici la liste des différentes photos du produit -->
                        <ul class="preview-thumbnail nav nav-tabs">
                            <li class="active"><a data-target="#pic-1" data-toggle="tab"><img src="./images/produits/{{ vehicule["marque"] }}_{{ vehicule["modele"] }}.jpg" /></a></li>
                            <!--<li><a data-target="#pic-2" data-toggle="tab"><img src="http://placekitten.com/200/126" /></a></li>
                            <li><a data-target="#pic-3" data-toggle="tab"><img src="http://placekitten.com/200/126" /></a></li>
                            <li><a data-target="#pic-4" data-toggle="tab"><img src="http://placekitten.com/200/126" /></a></li>
                            <li><a data-target="#pic-5" data-toggle="tab"><img src="http://placekitten.com/200/126" /></a></li>-->
                        </ul>-

                    </div>
                    <div class="details col-md-6">
                        <h3 class="product-title">
                            {{ vehicule["marque"] }}
                            {{ vehicule["modele"] }}
                            {{ vehicule["norme"] }}
                            </h3>
                        <div class="rating">
                            <div class="stars">
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star"></span>
                                <span class="fa fa-star"></span>
                            </div>
                            <!-- A VOIR pour éventuellement mettre un compteur de vues -->
                            <!--<span class="review-no">41 reviews</span>-->
                        </div>
                        <p class="product-description">
                            {{ vehicule["description"] }}
                        </p>
                        <h4 class="price">Prix demi journée <span>0 €</span></h4>
                       <!-- <p class="vote"><strong>91%</strong> of buyers enjoyed this product! <strong>(87 votes)</strong></p>-->
                        <h5 class="atouts">Les plus:
                            <span class="atout" data-toggle="tooltip" title="small">atouts à définir</span>
                            <!--<span class="atout" data-toggle="tooltip" title="medium">m</span>
                            <span class="atout" data-toggle="tooltip" title="large">l</span>
                            <span class="atout" data-toggle="tooltip" title="xtra large">xl</span>-->
                        </h5>
                        <h5 class="specifications">Fiche technique:
                            <ul>
                                <li>Marque: {{ vehicule["marque"] }}</li>
                                <li>Modèle: {{vehicule["modele"] }}</li>
                                <li>Norme anti-pollution: {{ vehicule["norme"] }}</li>
                                <li>Type d'énergie: {{ vehicule["energie"] }}</li>
                            </ul>
                        </h5>

                        <h5>
                        </h5>
                        <div class="row border border-warning">
                            <div class="col-md">
                                {{ form_label(reservationForm.dateDebut) }}
                            </div>
                            <div class="col">
                                {{ form_widget(reservationForm.dateDebut) }}
                            </div>
                        </div>
                        <div class="row border border-warning mt-2 mb-2">
                            <div class="col-md">
                                {{ form_label(reservationForm.dateFin) }}
                            </div>
                            <div class="col">
                                {{ form_widget(reservationForm.dateFin) }}
                            </div>
                        </div>
                        <div class="action mx-auto">
                            <form method="get" action="panier">
                                <button class="add-to-cart btn btn-default" type="submit">Ajouter au panier</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}